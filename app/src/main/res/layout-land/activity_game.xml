<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/ColorBox"
        android:layout_width="146dp"
        android:layout_height="71dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/boxborder"
        app:layout_constraintBottom_toTopOf="@+id/buttonPrevious"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/D"
        android:layout_width="142dp"
        android:layout_height="54dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="128dp"
        android:text="D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewResult"
        app:layout_constraintStart_toEndOf="@+id/editTextTextEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/B" />

    <Button
        android:id="@+id/C"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="193dp"
        android:text="C"
        app:layout_constraintBaseline_toBaselineOf="@+id/D"
        app:layout_constraintEnd_toStartOf="@+id/buttonClose"
        app:layout_constraintStart_toEndOf="@+id/buttonPrevious" />

    <Button
        android:id="@+id/A"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginEnd="6dp"
        android:text="A"
        app:layout_constraintBaseline_toBaselineOf="@+id/B"
        app:layout_constraintEnd_toStartOf="@+id/B"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/C" />

    <Button
        android:id="@+id/B"
        android:layout_width="143dp"
        android:layout_height="49dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="5dp"
        android:text="B"
        app:layout_constraintBottom_toTopOf="@+id/D"
        app:layout_constraintEnd_toEndOf="@+id/textViewResult"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/C"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <Button
        android:id="@+id/buttonPrevious"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="86dp"
        android:text="Previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColorBox" />

    <Button
        android:id="@+id/buttonClose"
        android:layout_width="91dp"
        android:layout_height="52dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="105dp"
        android:text="Close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/C"
        app:layout_constraintTop_toBottomOf="@+id/textViewResult" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="142dp"
        android:layout_height="141dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="27dp"
        android:text="\nRight: 0\nTotal: 10\nWrong: 0\nLeft: 10"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/D"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/B"
        app:layout_constraintEnd_toStartOf="@+id/D"
        app:layout_constraintStart_toEndOf="@+id/ColorBox"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>