<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="123dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="-1dp">

        <TextView
            android:id="@+id/NameLabel"
            android:layout_width="263dp"
            android:layout_height="36dp"
            android:layout_marginBottom="17dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="WELCOME TO COLOR GAME"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#56AF4C"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:typeface="normal"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/staticText" />

        <EditText
            android:id="@+id/editTextTextName"
            android:layout_width="384dp"
            android:layout_height="50dp"
            android:layout_marginBottom="35dp"
            android:ems="10"
            android:hint="Enter Your Name"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/Play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NameLabel" />

        <Button
            android:id="@+id/Play"
            android:layout_width="156dp"
            android:layout_height="45dp"
            android:layout_marginEnd="156dp"
            android:layout_marginBottom="45dp"
            android:background="@color/black"
            android:text="Play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Cancel"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextName" />

        <Button
            android:id="@+id/Cancel"
            android:layout_width="141dp"
            android:layout_height="47dp"
            android:layout_marginStart="191dp"
            android:layout_marginEnd="16dp"
            android:background="@color/Cgreen"
            android:text="Cancel"
            app:layout_constraintBaseline_toBaselineOf="@+id/Play"
            app:layout_constraintEnd_toStartOf="@+id/Play"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/staticText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:background="@color/Cgreen"
            android:text="بِسمِ اللہِ الرَّحمٰنِ الرَّحِيم"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="37sp"
            app:layout_constraintBottom_toTopOf="@+id/NameLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
